<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ClazzMapper">
    
    <resultMap type="Clazz" id="ClazzResult">
        <result property="clazzId"    column="clazz_id"    />
        <result property="clazzName"    column="clazz_name"    />
        <result property="grade"    column="grade"    />
        <result property="teacherId"    column="teacher_id"    />
        <result property="campusName" column="campus_name"/>
        <result property="campusId"    column="campus_id"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="teacherName" column="teacher_name"/>
    </resultMap>

    <sql id="selectClazzVo">
        SELECT
            c.clazz_id,
            c.clazz_name,
            c.grade,
            c.teacher_id,
            t.teacher_name,
            d.dept_name AS campus_name,
            c.campus_id,
            c.status,
            c.create_time
        FROM clazz c
                 LEFT JOIN teacher t ON c.teacher_id = t.teacher_id
                 LEFT JOIN sys_dept d ON c.campus_id = d.dept_id
    </sql>

    <select id="selectClazzList" parameterType="Clazz" resultMap="ClazzResult">
        <include refid="selectClazzVo"/>
        <where>  
            <if test="clazzName != null  and clazzName != ''"> and clazz_name like concat('%', #{clazzName}, '%')</if>
            <if test="grade != null  and grade != ''"> and grade = #{grade}</if>
            <if test="teacherId != null "> and teacher_id = #{teacherId}</if>
            <if test="campusId != null "> and campus_id = #{campusId}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectClazzByClazzId" parameterType="Long" resultMap="ClazzResult">
        <include refid="selectClazzVo"/>
        where clazz_id = #{clazzId}
    </select>

    <insert id="insertClazz" parameterType="Clazz" useGeneratedKeys="true" keyProperty="clazzId">
        insert into clazz
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="clazzName != null and clazzName != ''">clazz_name,</if>
            <if test="grade != null and grade != ''">grade,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="campusId != null">campus_id,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="clazzName != null and clazzName != ''">#{clazzName},</if>
            <if test="grade != null and grade != ''">#{grade},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="campusId != null">#{campusId},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateClazz" parameterType="Clazz">
        update clazz
        <trim prefix="SET" suffixOverrides=",">
            <if test="clazzName != null and clazzName != ''">clazz_name = #{clazzName},</if>
            <if test="grade != null and grade != ''">grade = #{grade},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
            <if test="campusId != null">campus_id = #{campusId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where clazz_id = #{clazzId}
    </update>

    <delete id="deleteClazzByClazzId" parameterType="Long">
        delete from clazz where clazz_id = #{clazzId}
    </delete>

    <delete id="deleteClazzByClazzIds" parameterType="String">
        delete from clazz where clazz_id in 
        <foreach item="clazzId" collection="array" open="(" separator="," close=")">
            #{clazzId}
        </foreach>
    </delete>
</mapper>